{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "play",
            "cwd": "${workspaceFolder}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/playd/playd", // Binary to exec
            "args": [], // Arguments passed
            "stopAtEntry": false,
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}"
                }                
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "valgrind: play",
            "type": "cppdbg",
            "request": "launch",
            "program": "valgrind", 
            "args": [
                "--leak-check=full",
                "--track-origins=yes",
                "--tool=memcheck",
                "--vgdb=yes",
                "--vgdb-error=0",
                "--error-limit=no",
                "${workspaceFolder}/build/playd/playd"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",       // Optional: if you want to use gdb to attach.
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "test",
            "cwd": "${workspaceFolder}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/test_suite", // Binary to exec
            "args": ["--log_level=all"], // Arguments passed
            "stopAtEntry": false,
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}"
                }                
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}